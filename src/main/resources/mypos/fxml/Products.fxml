<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import org.controlsfx.control.CheckComboBox?>


<BorderPane xmlns="http://javafx.com/javafx/11.0.1"
	xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="mypos.management.products.ProductsController">
	<top>
		<FlowPane hgap="4.0" vgap="10.0"
			BorderPane.alignment="CENTER">
				<HBox alignment="CENTER" spacing="5.0">
						<Label alignment="CENTER" contentDisplay="CENTER"
							prefHeight="17.0" prefWidth="36.0" text="Name" />
						<TextField fx:id="txtFieldProductName"
							prefHeight="25.0" prefWidth="136.0" promptText="canelones" />
				</HBox>
				<HBox alignment="CENTER" spacing="5.0">
						<Label alignment="CENTER" contentDisplay="CENTER"
							prefHeight="17.0" text="Provider" />
						<TextField fx:id="txtFieldProvider" prefHeight="25.0"
							prefWidth="136.0" promptText="DISPOLL" />
				</HBox>
				<HBox alignment="CENTER" spacing="5.0">
						<Label alignment="CENTER" contentDisplay="CENTER"
							prefHeight="17.0" prefWidth="36.0" text="Family" />
						<TextField fx:id="txtFieldFamily" prefHeight="25.0"
							prefWidth="136.0" promptText="pastas" />
				</HBox>
				<HBox alignment="CENTER" spacing="5.0">
						<Label alignment="CENTER" contentDisplay="CENTER"
							prefHeight="17.0" prefWidth="36.0" text="Type" />
						<CheckComboBox fx:id="comboProductType"
							prefHeight="25.0" prefWidth="100.0" />
				</HBox>
				<HBox alignment="CENTER" spacing="5.0">
						<Label alignment="CENTER" contentDisplay="CENTER"
							prefHeight="17.0" prefWidth="36.0" text="Price" />
						<ComboBox fx:id="comBoxCondOperator" prefHeight="25.0"
							prefWidth="60.0" />
						<Spinner fx:id="spinPrice1" prefHeight="25.0"
							prefWidth="80.0" />
				</HBox>
				<HBox alignment="CENTER" prefHeight="25.0" prefWidth="93.0"
					spacing="5.0">
						<CheckBox fx:id="chBoxWeighted" mnemonicParsing="false"
							text="Weighted" />
				</HBox>
				<HBox alignment="CENTER" prefHeight="25.0" prefWidth="200.0"
					spacing="5.0">
						<Button fx:id="btnSearch" mnemonicParsing="false"
							onAction="#search" prefHeight="25.0" prefWidth="100.0"
							text="Search" />
						<Button fx:id="btnReset" mnemonicParsing="false"
							onAction="#reset" prefHeight="25.0" prefWidth="100.0"
							text="Reset" />
				</HBox>
			<padding>
				<Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
			</padding>
		</FlowPane>
	</top>
	<center>
		<TableView fx:id="productsTable" editable="true"
			minWidth="700.0" prefWidth="700.0">
			<columns>
				<TableColumn prefWidth="56.0" text="ID" />
				<TableColumn prefWidth="104.0" text="Name" />
				<TableColumn prefWidth="65.0" text="Price" />
				<TableColumn prefWidth="100.0" text="Family" />
				<TableColumn prefWidth="50.0" text="Type" />
				<TableColumn prefWidth="60.0" text="Weighted" />
				<TableColumn prefWidth="90.0" text="Description" />
				<TableColumn prefWidth="75.0" text="Image" />
				<TableColumn prefWidth="75.0" text="Ingredients" />
			</columns>
			<columnResizePolicy>
				<TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
			</columnResizePolicy>
		</TableView>
	</center>
	<bottom>
		<StackPane fx:id="placeHolder"
			BorderPane.alignment="CENTER" />
	</bottom>
</BorderPane>
         