<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import org.controlsfx.control.CheckComboBox?>
<BorderPane fx:id="productsPanel" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="mypos.controllers.ProductsController">
	<top>
		<FlowPane fx:id="searchPanel" focusTraversable="true" hgap="4.0" vgap="10.0">
				<HBox alignment="CENTER" spacing="5.0">
						<Label alignment="CENTER" contentDisplay="CENTER" prefHeight="17.0" prefWidth="36.0" text="Name" />
						<TextField fx:id="txtFieldProductName" prefHeight="25.0" prefWidth="136.0" promptText="canelones" />
				</HBox>
				<HBox alignment="CENTER" spacing="5.0">
						<Label alignment="CENTER" contentDisplay="CENTER" prefHeight="17.0" text="Provider" />
						<TextField fx:id="txtFieldProvider" prefHeight="25.0" prefWidth="136.0" promptText="DISPOLL" />
				</HBox>
				<HBox alignment="CENTER" spacing="5.0">
						<Label alignment="CENTER" contentDisplay="CENTER" prefHeight="17.0" prefWidth="36.0" text="Family" />
							<JFXComboBox editable="true" promptText="FamilyExample" />
				</HBox>
				<HBox alignment="CENTER" spacing="5.0">
						<Label alignment="CENTER" contentDisplay="CENTER" prefHeight="17.0" prefWidth="50.0" text="Type" />
						<CheckComboBox fx:id="boxProductType" prefHeight="25.0" prefWidth="100.0" />
				</HBox>
				<HBox alignment="CENTER" spacing="5.0">
            <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="17.0" prefWidth="80.0" text="Category" />
            <CheckComboBox fx:id="boxProductCategory" prefHeight="25.0" prefWidth="100.0" />
				</HBox>
				<HBox alignment="CENTER" spacing="5.0">
						<Label alignment="CENTER" contentDisplay="CENTER" prefHeight="17.0" prefWidth="36.0" text="Price" />
						<ComboBox fx:id="boxConditionalOperator" prefHeight="25.0" prefWidth="60.0" />
						<Spinner fx:id="spinnerPrice1" prefHeight="25.0" prefWidth="80.0" />
				</HBox>
				<HBox alignment="CENTER" prefHeight="25.0" prefWidth="200.0" spacing="5.0">
						<Button fx:id="btnSearch" mnemonicParsing="false" onAction="#search" prefHeight="25.0" prefWidth="100.0" text="Search" />
						<Button fx:id="btnReset" mnemonicParsing="false" onAction="#reset" prefHeight="25.0" prefWidth="100.0" text="Reset" />
            <Button fx:id="btnNew" mnemonicParsing="false" onAction="#openNewEditPanel" prefHeight="25.0" prefWidth="100.0" text="New" />
				</HBox>
			<padding>
				<Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
			</padding>
		</FlowPane>
	</top>
	<center>
      <BorderPane>
         <center>
                           <TableView fx:id="productsTable" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" BorderPane.alignment="CENTER">
                           <columns>
                               <TableColumn fx:id="idCol" minWidth="50.0" prefWidth="-1.0" text="ID" />
                               <TableColumn fx:id="nameCol" minWidth="100.0" prefWidth="-1.0" text="Name" />
                               <TableColumn fx:id="priceCol" prefWidth="60.0" text="Price" />
                               <TableColumn fx:id="familyCol" minWidth="100.0" prefWidth="-1.0" text="Family" />
                               <TableColumn fx:id="typeCol" minWidth="100.0" prefWidth="-1.0" text="Type" />
                               <TableColumn fx:id="categoryCol" minWidth="100.0" prefWidth="-1.0" text="Category" />
                               <TableColumn fx:id="actionCol" minWidth="100.0" prefWidth="-1.0" text="Actions" />
                           </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
                       </TableView>
         </center>
      </BorderPane>
    </center>
   <right>
      <VBox fx:id="crudPanel" fillWidth="false" spacing="15.0" BorderPane.alignment="CENTER_LEFT">
         <children>
            <HBox alignment="CENTER" spacing="5.0">
               <children>
                  <Label contentDisplay="CENTER" styleClass="labelsNewProduct" stylesheets="@../../style.css" text="Name" />
                  <JFXTextField />
               </children>
            </HBox>
            <HBox alignment="CENTER" spacing="5.0">
               <children>
                  <Label contentDisplay="CENTER" styleClass="labelsNewProduct" stylesheets="@../../style.css" text="Description" />
                  <TextArea prefHeight="60.0" styleClass="fieldNewProduct" stylesheets="@../../style.css" />
               </children>
            </HBox>
            <HBox alignment="CENTER" spacing="5.0">
               <children>
                  <Label contentDisplay="CENTER" styleClass="labelsNewProduct" stylesheets="@../../style.css" text="Price" />
                  <JFXTextField />
               </children>
            </HBox>
            <HBox alignment="CENTER" spacing="5.0">
               <children>
                  <Label contentDisplay="CENTER" styleClass="labelsNewProduct" stylesheets="@../../style.css" text="Family" />
                  <JFXComboBox editable="true" prefWidth="150.0" styleClass="fieldNewProduct" stylesheets="@../../style.css" />
               </children>
            </HBox>
            <HBox alignment="CENTER" spacing="5.0">
               <children>
                  <Label contentDisplay="CENTER" styleClass="labelsNewProduct" stylesheets="@../../style.css" text="Type" />
                  <JFXComboBox styleClass="fieldNewProduct" />
               </children>
            </HBox>
            <HBox alignment="CENTER" spacing="5.0">
               <children>
                  <Label contentDisplay="CENTER" styleClass="labelsNewProduct" stylesheets="@../../style.css" text="Category" />
                  <ChoiceBox prefWidth="150.0" styleClass="fieldNewProduct" stylesheets="@../../style.css" />
               </children>
            </HBox>
            <HBox alignment="CENTER_LEFT" nodeOrientation="LEFT_TO_RIGHT" prefHeight="40.0" prefWidth="200.0" spacing="10.0">
               <children>
                  <Button fx:id="btnSearch1" mnemonicParsing="false" onAction="#search" prefHeight="25.0" prefWidth="100.0" text="Save" />
                  <Button fx:id="btnReset1" mnemonicParsing="false" onAction="#reset" prefHeight="25.0" prefWidth="100.0" text="Reset" />
                  <Button fx:id="btnCancel" mnemonicParsing="false" onAction="#openSearchPanel" prefHeight="25.0" prefWidth="100.0" text="Cancel" />
               </children>
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </HBox>
         </children>
         <padding>
            <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
         </padding>
      </VBox>
   </right>
</BorderPane>
